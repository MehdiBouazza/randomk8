apiVersion: v1
kind: DaemonSet
metadata:
  name: producteur
spec:
  selector:
    matchLabels:
      name: daemonset
  template:
    metadata:
      labels:
        name: daemonset
    spec:
      containers:
      - name: alpine
        image: alpine:3.13.2
        volumeMounts:
        - name: volume_web
          mountPath: /data/web
      volumes:
      - name: volume_web
        hostPath: 
          path: /data/web
          type: DirectoryOrCreate
